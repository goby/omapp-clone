        xmlns:my="clr-namespace:OperatingManagement.WpfObserver" 
        Icon="/OperatingManagement.WpfObserver;component/Resources/app.ico">
    <Grid Name="LayoutRoot" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,0">
        <Grid.RenderTransform>
            <ScaleTransform x:Name="gridTrans" ></ScaleTransform>
        </Grid.RenderTransform>
        <Grid.RowDefinitions>
            <RowDefinition Height="105" />
            <RowDefinition Height="245" />
            <RowDefinition Height="250" />
        </Grid.RowDefinitions>
    </Grid>
</Window>
